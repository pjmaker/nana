case $#
in 
    0)
	MAILER=cat
	DEST=-
	;;
    2)
	MAILER=$1
	DEST=$2
	;;
    *)
        echo usage $0 "[mailer dest]"
	exit 1
	;;
esac

## Generate the report to send off
(
echo "* summary"
echo "package ::= nana"
echo "version ::= 2.5"
echo "host ::= i386-unknown-freebsd5.3"
echo "target ::= i386-unknown-freebsd5.3"
echo "build ::= i386-unknown-freebsd5.3"

# valid values for test/check.sum are:
echo "result ::= `cat test/check.sum`"

echo "" 
echo "* administration information"
echo "date ::= `date`"
echo "user ::= `whoami`@`uname -n`"

echo ""
echo "* other generic configuration variables"
echo "host_cpu ::= i386"
echo "host_vendor ::= unknown"
echo "host_os ::= freebsd5.3"
echo "target_cpu ::= i386"
echo "target_vendor ::= unknown"
echo "target_os ::= freebsd5.3"
echo "build_cpu ::= i386"
echo "build_vendor ::= unknown"
echo "build_os ::= freebsd5.3"
echo "CFLAGS ::= -g -O2"
echo "CPPFLAGS ::= "
echo "CXXFLAGS ::= -g -O2"
echo "LDFLAGS ::= "
echo "LIBS ::= "
echo "DEFS ::=  -DPACKAGE=\"nana\" -DVERSION=\"2.5\" -DHAVE_VSPRINTF=1 -DHAVE_VSNPRINTF=1 -DHAVE_GETTIMEOFDAY=1 "
echo "CC ::= gcc"
echo "CXX ::= c++"

echo ""
echo "* package specific configuration variables"
echo "I_DEFAULT_HANDLER ::= "
echo "DI_MAKE_VALID_BREAKPOINT ::= #define DI_MAKE_VALID_BREAKPOINT(exprn) asm("nop")"
echo "DL_MAKE_VALID_BREAKPOINT ::= #define DL_MAKE_VALID_BREAKPOINT() asm("nop")"

echo ""
echo "* version numbers of related tools"
echo "gdb-version ::= `/usr/bin/gdb --version | head -1`"
echo "cc-version ::= `gcc --version | head -1`"
echo "cxx-version ::= `c++ --version | head -1`"

echo ""
echo "* summary of the failures"
(
 grep "^Fail" test/check.log 
 grep "^Passed 0" test/check.log
) | 
grep -v "Failed 7 failures, 10 successes selftest.c" |
gawk '
{ 
  if(NF == 8) {
     failed[$6 $8]++ 
  } else {
     failed[$6]++
  }
}

END { 
  for(i in failed) { 
    s = s " " i 
  }
  
  if(s != "") {
    print "* Detailed test results"
    system("cat test/check.log")
  }

  print "nana-failed ::= " s 
}
'
) | $MAILER $DEST

